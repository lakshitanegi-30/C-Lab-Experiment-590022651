/*Declare variables within different code blocks (enclosed by curly braces) and test 
their accessibility within and outside those blocks. */
#include <stdio.h>

int main() {
    
     int x = 10;
     printf("outside block = %d\n",x);
    
    {
        int y = 20;
        printf("inner block \n x:%d\n y: %d\n",x,y);
        {
          int z = 30;
           printf(" nested inner block \n x:%d\n y: %d\n z:%d\n",x,y,z);
        }
        // printf("z : %d",z);
    }
    // printf("y : %d",y);
    // printf("z : %d",z);
     printf("x : %d",x);

    return 0;
}
