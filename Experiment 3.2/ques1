// WAP to enter numbers till the user wants. At the end, it should display the count of positive, negative, and Zeroes entered.

#include <stdio.h>

int main() {
    int num;
    int p = 0, n = 0, z = 0;

    printf("Enter numbers separated by spaces(press ctrl+d to end taking inputs) \n");

    while (scanf("%d", &num) == 1) {
        if (num > 0)
            p++;
        else if (num < 0)
            n++;
        else
            z++;
    }

    
    printf("Positive numbers: %d\n", p);
    printf("Negative numbers: %d\n", n);
    printf("Zeroes: %d\n", z);

    return 0;
}

