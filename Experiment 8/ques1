/*Declare different types of pointers (int, float, char) and initialize them with the 
addresses of variables. Print the values of both the pointers and the variables 
they point to.*/

#include <stdio.h>

int main() {
    int a = 30;
    float b = 1.25;
    char c = 'L';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Integer value: %d, Pointer: %p\n", *p1, (void*)p1);
    printf("Float value: %.2f, Pointer: %p\n", *p2, (void*)p2);
    printf("Char value: %c, Pointer: %p\n", *p3, (void*)p3);

    return 0;
}
